[
  {
    "name": "op_scim_bridge",
    "image": "1password/scim:v2.9.0",
    "cpu": 128,
    "memory": 512,
    "essential": true,
    "dependsOn": [
      {
        "containerName": "redis",
        "condition": "HEALTHY"
      }
    ],
    "portMappings": [
      {
        "containerPort": 3002,
        "hostPort": 3002,
        "protocol": "tcp"
      }
    ],
    "environment": [
      {
        "name": "OP_TLS_DOMAIN",
        "value": ""
      },
      {
        "name": "OP_CONFIRMATION_INTERVAL",
        "value": "300"
      }
    ],
    "secrets": [
      {
        "name": "OP_SESSION",
        "valueFrom": "${secret_arn}"
      }
    ],
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "${aws_logs_group}",
        "awslogs-region": "${region}",
        "awslogs-stream-prefix": "ecs-scim"
      }
    },
    "mountPoints": [],
    "volumesFrom": []
  },
  {
    "name": "redis",
    "image": "redis",
    "command": [
      "redis-server",
      "--maxmemory 256mb",
      "--maxmemory-policy volatile-lru",
      "--save \"\""
    ],
    "cpu": 128,
    "memory": 512,
    "essential": true,
    "restart": "always",
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "${aws_logs_group}",
        "awslogs-region": "${region}",
        "awslogs-stream-prefix": "ecs-redis"
      }
    },
    "healthCheck": {
      "command": [
        "CMD-SHELL",
        "redis-cli ping | grep PONG"
      ],
      "interval": 30,
      "timeout": 5,
      "retries": 3
    },
    "portMappings": [
      {
        "containerPort": 6379,
        "hostPort": 6379,
        "protocol": "tcp"
      }
    ],
    "mountPoints": [],
    "volumesFrom": []
  }
]